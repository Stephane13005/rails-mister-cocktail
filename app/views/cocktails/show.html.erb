<div class="container">
	
	
	<h1><%= @cocktail.name %> </h1>
	<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<h2>Ingredients</h2> 
	<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %> of <%= dose.ingredient.name %> - <%= link_to "Delete",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></p>
                  <% end %>
	
	<%= link_to "Cocktails list", cocktails_path %> |
	<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>

</div>