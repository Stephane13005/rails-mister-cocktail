<div class="container">
	<h1>Cocktails list</h1>

<div class="cards">
	<% @cocktails.each do |cocktail| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.string_url %>)">
    <%= cocktail.name%><%= link_to "🔍", cocktail_path(cocktail) %>
  </div>
  <% end %>

</div>

</div>